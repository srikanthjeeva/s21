<!DOCTYPE html>
<html>
  <head>
    <title>S21</title>
    <%= stylesheet_link_tag "scaffold" %>
    <%= stylesheet_link_tag "depot", :media => "all" %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>
  <body id="store" >
    <div id="banner" >
      <%= "s21" %>
    </div>
    <div id="columns" >
      <div id="side" >
        <div id="cart" >
          <% if @cart %>
            <%= hidden_div_if(@cart.line_items.empty?, :id => "cart" ) do %>
              <%= render @cart %>
            <% end %>
          <% end %>
        </div>
        <a href="/" >Store</a><br />
        <a href="/products" >Products</a><br />
        <a href="/contact" >Contact</a><br />
      </div>
      <div id="main" >
        <%= yield %>
      </div>
    </div>
  </body>
</html>
